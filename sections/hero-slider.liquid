{% liquid
  assign autoplay = section.settings.autoplay
  assign autoplay_speed = section.settings.autoplay_speed | times: 1000
%}

<section id="HeroSlider-{{ section.id }}" 
         class="hero-slider-wrapper" 
         data-autoplay="{{ autoplay }}" 
         data-speed="{{ autoplay_speed }}">
  
  <div class="hero-slider" ref="slider">
    {% for block in section.blocks %}
      <div class="hero-slide" {{ block.shopify_attributes }} id="Slide-{{ block.id }}">
        
        {% if block.settings.image != blank %}
          <div class="hero-slide__media">
            {{ block.settings.image | image_url: width: 3840 | image_tag: 
               width: block.settings.image.width,
               height: block.settings.image.height,
               alt: block.settings.image.alt,
               class: 'hero-slide__image',
               widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
            }}
          </div>
        {% else %}
          <div class="hero-slide__media placeholder-svg">
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}

        <div class="hero-slide__overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>

        <div class="hero-slide__content align-{{ block.settings.text_alignment }}">
          <div class="hero-slide__content-inner glass">
            {% if block.settings.subheading != blank %}
              <p class="hero-slide__subheading">{{ block.settings.subheading | escape }}</p>
            {% endif %}
            
            {% if block.settings.heading != blank %}
              <h2 class="hero-slide__heading h1">{{ block.settings.heading | escape }}</h2>
            {% endif %}

            {% if block.settings.button_label != blank %}
              <a href="{{ block.settings.button_link }}" class="button button--primary hero-slide__button">
                {{ block.settings.button_label | escape }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size > 1 %}
    <div class="hero-slider__controls">
      <button type="button" class="hero-slider__arrow hero-slider__arrow--prev" aria-label="Previous slide" ref="prevBtn">
        <svg viewBox="0 0 24 24"><path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
      </button>
      
      <div class="hero-slider__dots" ref="dots">
        {% for block in section.blocks %}
          <button type="button" class="hero-slider__dot {% if forloop.first %}is-active{% endif %}" aria-label="Go to slide {{ forloop.index }}"></button>
        {% endfor %}
      </div>

      <button type="button" class="hero-slider__arrow hero-slider__arrow--next" aria-label="Next slide" ref="nextBtn">
        <svg viewBox="0 0 24 24"><path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12z"/></svg>
      </button>
    </div>
  {% endif %}
</section>

<style>
  .hero-slider-wrapper {
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height_desktop }}vh;
    overflow: hidden;
  }

  .hero-slider {
    display: flex;
    width: 100%;
    height: 100%;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  .hero-slider::-webkit-scrollbar {
    display: none;
  }

  .hero-slide {
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    position: relative;
    scroll-snap-align: start;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-slide__media {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-slide__image, 
  .hero-slide__media svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-slide__overlay {
    position: absolute;
    inset: 0;
    background: #000;
    z-index: 2;
    pointer-events: none;
  }

  .hero-slide__content {
    position: relative;
    z-index: 3;
    padding: 2rem;
    width: 100%;
    max-width: var(--page-width);
    display: flex;
  }

  .hero-slide__content.align-left { justify-content: flex-start; text-align: left; }
  .hero-slide__content.align-center { justify-content: center; text-align: center; }
  .hero-slide__content.align-right { justify-content: flex-end; text-align: right; }

  .hero-slide__content-inner {
    padding: 4rem;
    max-width: 60rem;
    color: #fff;
    border-radius: var(--radius-lg);
  }

  .hero-slide__subheading {
    font-size: 1.4rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .hero-slide__heading {
    font-size: clamp(3rem, 6vw, 6rem);
    margin-bottom: 2rem;
    line-height: 1.1;
  }

  /* Controls */
  .hero-slider__controls {
    position: absolute;
    bottom: 3rem;
    left: 0;
    right: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
  }

  .hero-slider__arrow {
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255,255,255,0.2);
    width: 4.8rem;
    height: 4.8rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #fff;
    transition: var(--transition-base);
  }

  .hero-slider__arrow svg {
    width: 2.4rem;
    height: 2.4rem;
    fill: currentColor;
  }

  .hero-slider__arrow:hover {
    background: rgba(255,255,255,0.2);
  }

  .hero-slider__dots {
    display: flex;
    gap: 1rem;
  }

  .hero-slider__dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255,255,255,0.3);
    border: none;
    cursor: pointer;
    padding: 0;
    transition: var(--transition-base);
  }

  .hero-slider__dot.is-active {
    background: #fff;
    transform: scale(1.5);
  }

  @media screen and (max-width: 749px) {
    .hero-slider-wrapper {
      height: {{ section.settings.section_height_mobile }}vh;
    }
    .hero-slide__content-inner {
      padding: 3rem 2rem;
      background: transparent;
      backdrop-filter: none;
      box-shadow: none;
      border: none;
    }
    .hero-slider__arrow {
      display: none;
    }
  }
</style>

<script>
  if (!customElements.get('hero-slider')) {
    class HeroSlider extends HTMLElement {
      constructor() {
        super();
        this.slider = this.querySelector('.hero-slider');
        this.slides = this.querySelectorAll('.hero-slide');
        this.dots = this.querySelectorAll('.hero-slider__dot');
        this.prevBtn = this.querySelector('.hero-slider__arrow--prev');
        this.nextBtn = this.querySelector('.hero-slider__arrow--next');
        
        this.autoplay = this.dataset.autoplay === 'true';
        this.speed = parseInt(this.dataset.speed) || 5000;
        this.currentIndex = 0;
        this.timer = null;

        this.init();
      }

      init() {
        if (this.slides.length <= 1) return;

        this.prevBtn?.addEventListener('click', () => this.scrollSlide(-1));
        this.nextBtn?.addEventListener('click', () => this.scrollSlide(1));

        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.scrollToIndex(index));
        });

        this.slider.addEventListener('scroll', () => this.handleScroll());
        
        if (this.autoplay) this.startAutoplay();
      }

      handleScroll() {
        const width = this.slider.offsetWidth;
        const index = Math.round(this.slider.scrollLeft / width);
        if (index !== this.currentIndex) {
          this.currentIndex = index;
          this.updateDots();
        }
      }

      scrollToIndex(index) {
        const width = this.slider.offsetWidth;
        this.slider.scrollTo({
          left: index * width,
          behavior: 'smooth'
        });
      }

      scrollSlide(direction) {
        let index = this.currentIndex + direction;
        if (index < 0) index = this.slides.length - 1;
        if (index >= this.slides.length) index = 0;
        this.scrollToIndex(index);
      }

      updateDots() {
        this.dots.forEach((dot, i) => {
          dot.classList.toggle('is-active', i === this.currentIndex);
        });
      }

      startAutoplay() {
        this.timer = setInterval(() => this.scrollSlide(1), this.speed);
        this.slider.addEventListener('mouseenter', () => clearInterval(this.timer));
        this.slider.addEventListener('mouseleave', () => this.startAutoplay());
      }
    }
    customElements.define('hero-slider', HeroSlider);
  }
</script>

{% schema %}
{
  "name": "Hero Slider",
  "tag": "hero-slider",
  "settings": [
    {
      "type": "range",
      "id": "section_height_desktop",
      "label": "Desktop Height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 90
    },
    {
      "type": "range",
      "id": "section_height_mobile",
      "label": "Mobile Height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 70
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay slides",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay Opacity",
          "min": 0,
          "max": 90,
          "step": 5,
          "unit": "%",
          "default": 30
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "NEW SEASON"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Creative Design"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "center"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
